<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22000000"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="人群"
        android:textColor="@color/color_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_person_none"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="不限"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_adult"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="成人"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_child"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="儿童"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="场景"
        android:textColor="@color/color_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_scene_none"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="不限"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_sing"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="弹唱"
            android:layout_marginLeft="20dp"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_practise"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="练琴"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="教材"
        android:textColor="@color/color_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_course_none"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="不限"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_classics"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="经典教程"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_checked"
            android:gravity="center"
            android:text="考级教程"
            android:textColor="@color/filter_color"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line"
        android:paddingTop="20dp"
        android:visibility="visible" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_reset"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/color_title"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_confirm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_confirm"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_reset"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>